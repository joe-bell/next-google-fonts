{
  "private": true,
  "name": "root",
  "scripts": {
    "build": "lerna exec -- microbundle --jsx React.createElement --tsconfig tsconfig.json",
    "commit": "git-cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "14.14.10",
    "@types/react": "17.0.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.2",
    "microbundle": "0.12.4",
    "next": "9.5.5",
    "prettier": "2.2.1",
    "react": "16.14.0",
    "typescript": "4.1.2"
  }
}
